{
  "name": "ws-p2p",
  "description": "WebSocket IPFS bike",
  "main": "./lib/index",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Garik-/ws-p2p"
  },
  "contributors": [
    "Gar|k <garik.djan@gmail.com>"
  ],
  "private": true,
  "dependencies": {
    "chai": "^4.1.2",
    "dc-logging": "^0.1.6",
    "dotenv": "^6.0.0",
    "mocha": "^5.2.0",
    "ramda": "^0.25.0",
    "ws": "^6.1.0",
    "moment": "^2.22.2"
  },
  "devDependencies": {
    "@types/node": "10.9.4",
    "husky": "^1.1.1",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.11.1",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.14.0",
    "tslint-eslint-rules": "5.3.1",
    "typescript": "3.1.3"
  },
  "options": {
    "mocha": "--timeout 5000 --require ts-node/register src/**/__tests__/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "f-o": "prettier --single-quote --write",
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "start:server": "ts-node src/server/index.ts",
    "start:test": "ts-node src/__tests__/1_transport.test",
    "build": "tsc --build",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "format": "prettier --single-quote --write **/src/**/*.ts",
    "lint": "tslint --exclude **/node_modules/** --exclude **/lib/**/* **/src/**/*.ts",
    "lint:fix": "tslint --exclude **/node_modules/** --exclude **/lib/**/* **/src/**/*.ts --fix",
    "test": "npm run lint && npm run testonly",
    "testonly": "mocha $npm_package_options_mocha"
  }
}
